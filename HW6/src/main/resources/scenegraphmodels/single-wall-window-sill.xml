<scene>
  <instance name="box" path="models/box"></instance>
  <image name="bricks" path="textures/bricks.jpg"/>
  <image name="metal" path="textures/brushedMetal.jpg"/>
  <image name="bgl" path="textures/glass.jpg"/>

  <group>
    <!--Enable the following part to display coordinates-->
    <!--<group name="coordinate" from="scenegraphmodels/coordinate.xml"></group>-->
    <group name="window" from="scenegraphmodels/single-wall.xml"></group>
    <transform name = "glass">
      <set>
        <scale>3 3 1.5</scale>
      </set>
      <object instanceof="box" texture="bgl">
        <material>
          <ambient>.3 0 0</ambient>
          <diffuse>0 0 .2</diffuse>
          <specular>.2 .2 .2</specular>
        </material>
      </object>
    </transform>
    <transform name = "bottom">
      <set>
        <translate>0 -1.75 0</translate>
        <scale>4 .5 4</scale>
      </set>
      <object instanceof="box" texture="bricks">
        <material>
          <color>1 1 1</color>
        </material>
      </object>
    </transform>
    <transform name="top">
      <set>
        <translate>0 1.75 0</translate>
        <scale>4 .5 4</scale>
      </set>
      <object instanceof="box" texture="bricks">
        <material>
          <color>1 1 1</color>
        </material>
      </object>
    </transform>
    <transform name="right">
      <set>
        <translate>1.75 0 0</translate>
        <rotate>90 0 0 1</rotate>
        <scale>4 .5 4</scale>
      </set>
      <object instanceof="box" texture="bricks">
        <material>
          <color>1 1 1</color>
        </material>
      </object>
    </transform>
    <transform name="left">
      <set>
        <translate>-1.75 0 0</translate>
        <rotate>90 0 0 1</rotate>
        <scale>4 .5 4</scale>
      </set>
      <object instanceof="box" texture="bricks">
        <material>
          <color>1 1 1</color>
        </material>
      </object>
    </transform>
    <transform name = "sill">
      <set>
        <translate>-2 -2.5 1.5</translate>
        <scale>4 .5 2</scale>
        <translate>.5 .5 .5</translate>
      </set>
      <object instanceof="box" texture="bricks">
        <material>
          <color>1 1 1</color>
        </material>
      </object>
    </transform>
  </group>
</scene>