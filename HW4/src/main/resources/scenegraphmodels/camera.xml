<scene>
  <instance name="sphere" path="models/sphere.obj"/>
  <instance name="cone" path="models/cone.obj"/>
  <instance name="cylinder" path="models/cylinder.obj"/>
  <group>
    <transform>
      <set>
        <translate>0 0 0</translate>
      </set>
      <group>
        <transform name="ball">
          <set>
            <scale>2 2 2</scale>
          </set>
          <object instanceof="sphere">
            <material>
              <color>.5 .5 .5</color>
            </material>
          </object>
        </transform>
        <transform name="up">
          <set>
            <translate>0 5 0</translate>
          </set>
          <group>
            <transform>
              <set>
                <scale>1 2 1</scale>
              </set>
              <object instanceof="cone">
                <material>
                  <color>.8 0 0</color>
                </material>
              </object>
            </transform>
            <transform>
              <set>
                <translate>0 -2 0</translate>
                <scale>.5 2 .5</scale>
              </set>
              <object instanceof="cylinder">
              <material>
                <color>.8 0 0</color>
              </material>
            </object>
            </transform>
          </group>

        </transform>
        <transform name="right">
          <set>
            <translate>5 0 0</translate>
            <rotate>-90 0 0 1</rotate>
          </set>
          <group>
            <transform>
              <set>
                <scale>1 2 1</scale>
              </set>
              <object instanceof="cone">
                <material>
                  <color>.4 .8 1</color>
                </material>
              </object>
            </transform>
            <transform>
              <set>
                <translate>0 -2 0</translate>
                <scale>.5 2 .5</scale>
              </set>
              <object instanceof="cylinder">
                <material>
                  <color>.4 .8 1</color>
                </material>
              </object>
            </transform>
          </group>
        </transform>
        <transform>
          <set>
            <translate>0 0 5</translate>
            <rotate>90 1 0 0</rotate>
          </set>
          <group>
            <transform>
              <set>
                <scale>1 2 1</scale>
              </set>
              <object instanceof="cone">
                <material>
                  <color>1 .647 0</color>
                </material>
              </object>
            </transform>
            <transform>
              <set>
                <translate>0 -2 0</translate>
                <scale>.5 2 .5</scale>
              </set>
              <object instanceof="cylinder">
                <material>
                  <color>1 .647 0</color>
                </material>
              </object>
            </transform>
          </group>
        </transform>
      </group>
    </transform>
  </group>
</scene>